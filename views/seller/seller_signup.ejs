<!doctype html>
<html>
<head>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
    <script src="/javascripts/angular.min.js"></script>
    <script src="/javascripts/notification.js"></script>
    <style>
        body        { padding-top:80px; }

    li {
        list-style: none;
        margin-bottom: 1em;
    }
    input { border: 2px solid black; }
    input:-moz-ui-invalid { box-shadow: none; }
    </style>
</head>
<body ng-app="user" ng-controller="signup">

<div class="col-sm-6 col-sm-offset-3">
  <h2>Seller signup</h2>
  <form action="/sellers/signup" method="post">
      <div class="form-group signup" ng-controller="signup">
        </br>
        <h4>Company details</h4>
          <div id="input_container">
            <input class="form-control" type="text" ng-model="email" id="input" name="email" placeholder="Email (leave empty if same as user)" style="border-bottom:0px">
          </div>
          <div id="input_container">
            <input class="form-control" type="text" ng-model="phone" id="input" name="phone" placeholder="phone" style="border-bottom:0px">
          </div>
          <div id="input_container">
            <input type="text" class="form-control" ng-model="company_name" name="company_name" placeholder="Company name" style="">
          </div>
        <h4>Address</h4>
          <div id="input_container">
            <input class="form-control" type="text" ng-model="street" id="input" name="street" placeholder="Street" style="border-bottom:0px">
          </div>
          <div id="input_container">
            <input class="form-control" type="text" ng-model="street" id="input" name="city" placeholder="City" style="border-bottom:0px">
          </div>
          <div id="input_container">
            <input class="form-control" type="text" ng-model="street" id="input" name="zipcode" placeholder="Zipcode" style="border-bottom:0px">
          </div>
          <div id="input_container">
            <input class="form-control" type="text" ng-model="street" id="input" name="country" placeholder="Country" style="">
          </div>
      </div>
      <div class="form-group">
      </div>

      <button type="submit" class="btn btn-warning btn-lg">Next</button>
  </form>
    <p>Already have an account? <a href="/users/login">Login</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>

</body>
</html>



