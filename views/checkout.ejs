<!DOCTYPE html>
<html lang="en">

<head>
  <% include ./partials/head %>
  <title>Hello World E-commerce</title>
</head>

<body>

  <% include ./partials/navbar %>

  <script>x = <%- items %></script>
  <script>user= <%- user %></script>
  <div class="container" ng-app="checkout" ng-controller="page">
    <h2>Checkout<h2> 
    <hr>
    <div class="panel panel-default" style="width:40%;">
      <div class="panel-heading">
        <h3 class="panel-title">1. Shipping</h3>
      </div>
      <div class="panel-body">
          <div class="container">
            {{ user.name.first}} {{ user.name.last}}
            {{ user.shipping_address.address1 }} </br>
            {{ user.shipping_address.city }},
            {{ user.shipping_address.zipcode }}
          </div>
      </div>
    </div>
    
      <h4>2. Items</h4> 
      <div class="panel panel-default">
        <table class="table">
          <thead>
              <tr>
              </tr>
          </thead>
          <tbody>
              <tr>
                <td ng-repeat="item in items">{{ item.name  }}</td>
              </tr>
              <tr>
                <td ng-repeat="item in items">${{ item.price}} + ${{ item.price*0.06 }} tax</td>
              </tr>
          </tbody>
        </table>
      </div>
      </br>
      <h3><span class="label label-success">Subtotal</span> ${{ total + total*0.06 }}</h3>
</br>
      <a href="/users/checkout" style="float:right;"><button class="btn btn-primary">Checkout</button></a>
  </div>
  <script src="/javascripts/checkout.js"></script>
</body>
</html>
